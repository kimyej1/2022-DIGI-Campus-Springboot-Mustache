
<!-- layout/posts-print-write.mustache -->
{{>layout/header}}
<div class="row">
    <div class="col">
        <h5 class="text-primary fw-bold"><span class="material-icons icon">edit</span> 글쓰기</h5>
    </div>

    <div class="row">
        <div class="col" id="debug">
            <!-- 요자리에 오류났을 때 메시지를 보여주려고 함 -->
        </div>
    </div>
        <input type="hidden" id="id" value="{{posts.id}}">
        <div class="row">
            <div class="col-2 colLine d-none col-md-2 d-md-block">제목</div>
            <div class="col colLine fw-bold">
                {{posts.title}}
            </div>
        </div>
        <div class="row">
            <div class="col-2 colLine d-none col-md-2 d-md-block">작성자</div>
            <div class="col colLine fw-bold">
                {{posts.author}}
            </div>
            <div class="col-3 colLine text-end">
                읽음 : <span class="fw-bold">{{posts.view}}</span>  |
                추천 : <span class="fw-bold" id="idRec">{{posts.rec}}</span>   <!--이 값 찾아와서 +1 하려구-->
            </div>
        </div>
        <div class="row">
            <div class="col-2 colLine d-none col-md-2 d-md-block">내용</div>
            <div class="col colLine">
                {{posts.content}}
            </div>
        </div>
        <div class="row">
            <div class="col colLine text-center">
                <button type="button" id="update" class="btn btn-primary" onClick="location.href='/posts/update/{{posts.id}}'">수정</button>
                <button type="button" id="btn-delete" class="btn btn-primary">삭제</button>
                <button type="button" id="btn-rec" class="btn btn-primary" >추천</button>
                <button type="button" id="btn-list" class="btn btn-primary" onClick="location.href='/'">목록</button>
            </div>
        </div>

</div>
<script src="/js/app/index.js"></script>
{{>layout/footer}}